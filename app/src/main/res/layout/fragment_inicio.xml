<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inicio.inicioFragment">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis rifas creadas"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/inicio_btn_crear_rifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="+ Crear rifa"
                android:textSize="18sp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="-24dp" />

            <TextView
                android:id="@+id/inicio_txt_no_rifas_creadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="No creaste ninguna rifa"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="?attr/colorOnSurface"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_rifas_creadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Rifas a las que me unÃ­"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/inicio_btn_unirse_a_rifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="+ Unirse a rifa"
                android:textSize="18sp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="-24dp" />

            <TextView
                android:id="@+id/inicio_txt_no_rifas_unidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="No te uniste a ninguna rifa"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textColor="?attr/colorOnSurface"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_rifas_unidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>