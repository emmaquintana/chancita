<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rifa.RifaOrganizadorFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/rifa_organizador_txt_titulo_rifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvemos a Pepito 2"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_monto_recaudado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto recaudado: $18.000,00"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_titulo_rifa"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_seccion_informacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_monto_recaudado"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_info_estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Estado: Sorteado"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_seccion_informacion"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_info_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Título: Salvemos a Pepito 2"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_info_estado"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_info_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Descripción: [Resultados] de la rifa..."
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_info_titulo"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_info_codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Código: AZX389"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_info_descripcion"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_info_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Fecha de sorteo: 22/09/2025 21:30"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_info_codigo"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_info_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Precio de número: $2000"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_info_fecha"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_info_metodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Método de elección: Determinista (Resultados de la tómbola de la Lotería Sanfer)"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_info_precio"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_seccion_eleccion_ganadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elección de ganadores"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_info_metodo"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_eleccion_ganadores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_seccion_eleccion_ganadores" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rifa_organizador_btn_confirmar_ganadores"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Confirmar ganadores"
                android:textSize="16sp"
                android:visibility="gone"
                app:cornerRadius="28dp"
                app:layout_constraintTop_toBottomOf="@id/recycler_view_eleccion_ganadores"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_seccion_ganadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ganadores"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_btn_confirmar_ganadores"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/rifa_organizador_ll_ganadores_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_seccion_ganadores"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_ganadores"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <TextView
                android:id="@+id/rifa_organizador_txt_seccion_participantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Participantes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_ll_ganadores_info"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_nombre_participante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Nombre y apellido"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rifa_organizador_txt_seccion_participantes" />

            <TextView
                android:id="@+id/rifa_organizador_txt_numeros_comprados_participante"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:text="Números comprados"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rifa_organizador_txt_seccion_participantes" />

            <LinearLayout
                android:id="@+id/rifa_organizador_ll_participantes_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_nombre_participante"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/rifa_organizador_txt_no_hay_participantes"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Aún no hay participantes"
                    android:textColor="?attr/colorOnSurface"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_participantes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/rifa_organizador_txt_seccion_premios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premios"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_ll_participantes_list"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/rifa_organizador_txt_premios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1er puesto: $10000"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toBottomOf="@id/rifa_organizador_txt_seccion_premios"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>