<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título del diálogo -->
    <TextView
        android:id="@+id/dialog_unirse_rifa_txt_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar código de la rifa"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="12dp"
        android:textColor="?attr/colorOnSurface"/>

    <!-- Campo de entrada -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/dialog_unirse_rifa_til_codigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código de la rifa"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_unirse_rifa_tiet_codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/dialog_unirse_rifa_btn_cancelar"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"/>

        <Button
            android:id="@+id/dialog_unirse_rifa_btn_unirse"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unirse"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
