<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rifa.RifaParticipanteFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="?attr/colorSurfaceContainerLowest">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card Header - Información Principal -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/rifa_participante_txt_titulo_rifa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cargando..."
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Información General -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/rifa_participante_txt_info_rifa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📋 Información"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Estado:"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/rifa_participante_txt_estado_rifa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cargando..."
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginVertical="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Precio:"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/rifa_participante_txt_precio_numero"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cargando..."
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginVertical="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/rifa_participante_txt_codigo_info"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_info_outline"
                            android:drawablePadding="4dp"
                            android:drawableTint="?attr/colorPrimary"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="Código:"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/rifa_participante_txt_codigo_rifa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cargando..."
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"
                            android:drawableEnd="@drawable/ic_copy"
                            android:drawablePadding="8dp"
                            android:drawableTint="?attr/colorPrimary"
                            android:foreground="?attr/selectableItemBackground"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginVertical="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fecha de sorteo:"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/rifa_participante_txt_fecha_sorteo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cargando..."
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginVertical="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/rifa_participante_txt_metodo_eleccion_head"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@drawable/ic_info_outline"
                            android:drawablePadding="4dp"
                            android:drawableTint="?attr/colorPrimary"
                            android:foreground="?attr/selectableItemBackground"
                            android:text="Método:"
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/rifa_participante_txt_metodo_eleccion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cargando..."
                            android:textSize="16sp"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="end"/>

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:id="@+id/rifa_participante_btn_compartir_rifa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Compartir rifa"
                        android:textSize="16sp"
                        android:visibility="gone"
                        app:icon="@drawable/ic_share"
                        app:iconGravity="start"
                        app:strokeColor="?attr/colorPrimary"
                        app:cornerRadius="8dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Contacto del Organizador -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📞 Contacto del organizador"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/rifa_participante_txt_correo_organizador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Correo: Cargando..."
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/rifa_participante_txt_nro_celular_organizador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Celular: Cargando..."
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Descripción -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rifa_participante_mcv_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/rifa_participante_txt_descripcion_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📝 Descripción"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/rifa_participante_txt_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cargando..."
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:lineSpacingMultiplier="1.2"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Premios -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rifa_participante_mcv_premios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/rifa_participante_txt_premios_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🏆 Premios"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/rifa_participante_txt_premios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cargando..."
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:lineSpacingMultiplier="1.2"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Números Comprados -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/rifa_participante_txt_numeros_comprados_por_usuario_actual_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🎯 Números que compraste"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/rifa_participante_txt_numeros_comprados_por_usuario_actual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cargando..."
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Resultados (Ganadores) - Visible solo cuando hay ganadores -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rifa_participante_mcv_ganadores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/rifa_participante_txt_numeros_ganadores"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🏅 Números ganadores"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/rifa_participante_txt_msj_resultado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¡Felicidades! El creador de la rifa se pondrá en contacto contigo."
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/rifa_participante_txt_numeros_ganadores_premios"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Comprar Números - Visible solo cuando está activa -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rifa_participante_mcv_comprar_numeros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="1dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="16dp"                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/rifa_participante_txt_comprar_numeros_titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🛒 Comprar números"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/rifa_participante_txt_comprar_numeros_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selecciona los números que quieres comprar. Los números grises ya están comprados."
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="16dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rifa_participante_rv_numeros"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        tools:itemCount="2"
                        tools:listitem="@layout/layout_numero" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/rifa_participante_btn_comprar_numeros"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Comprar número/s"
                        android:textSize="16sp"
                        android:enabled="false"
                        app:cornerRadius="8dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rifa_participante_btn_salir"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salir de la rifa"
                android:textSize="16sp"
                android:textColor="@color/md_theme_error"
                android:layout_marginTop="16dp"
                android:visibility="visible"
                app:cornerRadius="12dp"
                app:strokeColor="#FF0000"
                app:strokeWidth="1dp"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>