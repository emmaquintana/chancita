<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.rifa.RifaParticipanteFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/rifa_participante_txt_titulo_rifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargando..."
                android:textColor="?attr/colorOnSurface"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rifa_participante_txt_info_rifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Información"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_titulo_rifa" />

            <TextView
                android:id="@+id/rifa_participante_txt_estado_rifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Estado: Cargando..."
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_info_rifa" />

            <TextView
                android:id="@+id/rifa_participante_txt_precio_numero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Precio: Cargando..."
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_estado_rifa" />

            <TextView
                android:id="@+id/rifa_participante_txt_codigo_rifa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Código: Cargando..."
                android:drawableEnd="@drawable/ic_copy"
                android:drawablePadding="8dp"
                android:drawableTint="?attr/colorOnSurface"
                android:foreground="?attr/selectableItemBackground"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_precio_numero" />

            <TextView
                android:id="@+id/rifa_participante_txt_fecha_sorteo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Fecha de sorteo: Cargando..."
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_codigo_rifa" />

            <TextView
                android:id="@+id/rifa_participante_txt_metodo_eleccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Método de elección: Cargando..."
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_fecha_sorteo" />

            <TextView
                android:id="@+id/rifa_participante_txt_correo_organizador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Correo del creador de la rifa: Cargando..."
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_metodo_eleccion" />

            <TextView
                android:id="@+id/rifa_participante_txt_nro_celular_organizador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Celular del creador de la rifa: Cargando..."
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_correo_organizador" />

            <TextView
                android:id="@+id/rifa_participante_txt_descripcion_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Descripción"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_nro_celular_organizador" />

            <TextView
                android:id="@+id/rifa_participante_txt_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Cargando..."
                android:textStyle="normal"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_descripcion_titulo" />

            <TextView
                android:id="@+id/rifa_participante_txt_premios_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Premios"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_descripcion" />

            <TextView
                android:id="@+id/rifa_participante_txt_premios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Cargando..."
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_premios_titulo" />

            <TextView
                android:id="@+id/rifa_participante_txt_numeros_comprados_por_usuario_actual_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Números que compraste"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_premios" />

            <TextView
                android:id="@+id/rifa_participante_txt_numeros_comprados_por_usuario_actual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Números que compraste: Cargando..."
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_numeros_comprados_por_usuario_actual_titulo" />

            <TextView
                android:id="@+id/rifa_participante_txt_numeros_ganadores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="?attr/colorOnSurface"
                android:text="Números ganadores: Cargando..."
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_numeros_comprados_por_usuario_actual" />

            <TextView
                android:id="@+id/rifa_participante_txt_msj_resultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:text="¡Felicidades! El creador de la rifa se pondrá en contacto contigo."
                android:visibility="gone"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_numeros_ganadores" />

            <TextView
                android:id="@+id/rifa_participante_txt_numeros_ganadores_premios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_msj_resultado"
                />

            <TextView
                android:id="@+id/rifa_participante_txt_comprar_numeros_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Comprar números"
                android:textColor="?attr/colorOnSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_numeros_ganadores_premios" />

            <TextView
                android:id="@+id/rifa_participante_txt_comprar_numeros_descripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone"
                android:text="Selecciona los números que quieres comprar. Ten que los grises son aquellos que ya están comprados"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_comprar_numeros_titulo" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rifa_participante_rv_numeros"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/rifa_participante_txt_aclaracion_comision"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rifa_participante_txt_comprar_numeros_descripcion"
                app:layout_constraintVertical_bias="0.0"
                tools:itemCount="2"
                tools:listitem="@layout/layout_numero" />

            <TextView
                android:id="@+id/rifa_participante_txt_aclaracion_comision"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tenga en cuenta que se cobra una comisión del 2.2%"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/rifa_participante_btn_comprar_numeros"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rifa_participante_btn_comprar_numeros"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:enabled="false"
                android:text="Comprar número/s"
                android:textSize="18sp"
                android:visibility="gone"
                app:cornerRadius="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>