<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.crear_rifa.CrearRifaPaso1Fragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_mercado_pago"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="64dp"
                android:contentDescription="Logo Mercado Pago"
                android:src="@drawable/mercado_pago"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_descripcion_1_paso_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Para que puedas recibir el dinero de tus rifas de manera directa y segura, necesitamos que vincules tu cuenta de Mercado Pago."
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_mercado_pago" />

            <TextView
                android:id="@+id/txt_descripcion_2_paso_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Si ya tienes una cuenta, inicia sesiÃ³n. Si no, puedes crear una nueva cuenta en muy pocos minutos."
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/btn_continuar_paso_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_descripcion_1_paso_1"
                app:layout_constraintVertical_bias="0.176" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_continuar_paso_1"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:text="Continuar"
                android:textSize="18sp"
                app:cornerRadius="28dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>