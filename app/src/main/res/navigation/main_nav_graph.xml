<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.emmanuel.chancita.ui.inicio.inicioFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_inicio" >
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/navigation_profile"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_notificationsFragment"
            app:destination="@id/navigation_notifications" />
    </fragment>
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.emmanuel.chancita.ui.notificaciones.NotificacionesFragment"
        android:label="fragment_notifications"
        tools:layout="@layout/fragment_notificaciones" >
        <action
            android:id="@+id/action_notificationsFragment_to_profileFragment"
            app:destination="@id/navigation_profile" />
        <action
            android:id="@+id/action_notificationsFragment_to_homeFragment"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.emmanuel.chancita.ui.perfil.PerfilFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_perfil" >
        <action
            android:id="@+id/action_profileFragment_to_notificationsFragment"
            app:destination="@id/navigation_notifications" />
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/navigation_home" />
    </fragment>
</navigation>